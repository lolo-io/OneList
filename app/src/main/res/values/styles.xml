<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommonAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    </style>

    <style name="CommonAppThemeLauncher" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@mipmap/logo_9</item>
    </style>

    <!-- Custom Preference Theme -->
    <style name="CommonPreferenceTheme"
        parent="PreferenceThemeOverlay">
        <item name="android:layout">
            @layout/fragment_settings
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>


    <style name="AppTheme" parent="CommonAppTheme"/>
    <style name="AppThemeLauncher" parent="CommonAppThemeLauncher"/>
    <style name="AppPreferenceTheme" parent="CommonPreferenceTheme" />

</resources>
